\newcommand{\Eqn}[2]
{
	\begin{align}
	#1
	\label{#2}
	\end{align}
}

\newcommand{\Set}[2]
{
	\left\lbrace #1  \,\middle|\, #2 \right\rbrace
}

\newcommand{\scalar}[2]{
	\langle#1,#2\rangle
}

\newcommand{\R}[1]
{ 
	\mathbb{R}^{#1}
}

\newcommand{\M}[2]
{
	\mathcal{M}_{#1 \times #2}
}

\newcommand{\application}[3]
{
	#1 : #2 \longrightarrow #3
}

\newcommand{\applicationr}[5]
{
	#1 : \underset{#4}{#2}  \underset{\longmapsto }{ \longrightarrow }  \underset{#5}{#3}
}

